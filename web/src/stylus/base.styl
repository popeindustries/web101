black = #33342c
grey = #808080
grey_light = #c5c5be
grey_very_light = #f4f4f4
grey_dark = darken(grey, 40%)
yellow_light = #fff4d4
yellow_dark = #ffcc33
blue = #009bc8
red = #e44d46
green = #5fbb5d

font-sans = "Gill Sans", sans-serif
font-serif = "Minion Pro", Georgia, serif
font-mono = Inconsolata, "Lucida Console", Terminal, "Courier New", Courier, monospace

inset-box()
	box-shadow inset 0 3px 5px rgba(0,0,0,0.5), inset 0 -1px rgba(255,255,255,0.15)
	border-radius 4px
	margin-bottom: 1em

outset-box()
	box-shadow inset 0 1px rgba(255,255,255,0.15), 0 2px 3px rgba(0,0,0,0.2)
	border-radius 4px
	margin-bottom: 1em
